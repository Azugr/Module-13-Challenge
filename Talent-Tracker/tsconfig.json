{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": false, 
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist" 
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}